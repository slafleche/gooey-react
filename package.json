{
  "name": "@lafleche/gooey-react",
  "version": "1.2.2",
  "description": "The gooey effect for React",
  "homepage": "https://github.com/slafleche/gooey-react",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slafleche/gooey-react.git"
  },
  "bugs": {
    "url": "https://github.com/slafleche/gooey-react/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Luuk de Vlieger",
    "email": "info@luuk.site",
    "url": "https://www.luuk.site"
  },
  "contributors": [
    {
      "name": "slafleche"
    }
  ],
  "files": [
    "dist",
    "dist-types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gooey",
    "goo",
    "gooeyeffect",
    "react",
    "blobs",
    "svg",
    "metaballs",
    "animation",
    "effect",
    "graphics",
    "reactjs",
    "shape",
    "svg-filter",
    "svg-filters",
    "goop",
    "goopy"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist-types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:js": "tsup src/index.tsx --format cjs,esm --out-dir dist --clean",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "run-p build:js build:types",
    "prebuild": "rimraf dist dist-types",
    "prepublishOnly": "npm test && npm run build",
    "release": "node scripts/release.mjs",
    "release:dry": "node scripts/release.mjs --dry-run",
    "test:watch": "jest --watch",
    "test": "jest",
    "ts": "tsc --noEmit"
  },
  "devDependencies": {
    "@swc/core": "^1.15.4",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18 || ^19"
  }
}
