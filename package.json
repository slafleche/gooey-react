{
  "name": "gooey-react",
  "version": "1.1.0",
  "description": "The gooey effect for React",
  "homepage": "https://gooey-react.netlify.app",
  "repository": "luukdv/gooey-react",
  "bugs": "https://github.com/luukdv/gooey-react/issues",
  "license": "MIT",
  "author": {
    "name": "Luuk de Vlieger",
    "email": "info@luuk.site",
    "url": "https://www.luuk.site"
  },
  "files": [
    "dist",
    "dist-types"
  ],
  "keywords": [
    "gooey",
    "goo",
    "gooeyeffect",
    "react",
    "blobs",
    "svg",
    "metaballs",
    "animation",
    "effect",
    "graphics",
    "reactjs",
    "shape",
    "svg-filter",
    "svg-filters",
    "goop",
    "goopy"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist-types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:js": "tsup src/index.tsx --format cjs,esm --out-dir dist --clean",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "run-p build:js build:types",
    "prebuild": "rimraf dist dist-types",
    "prepublishOnly": "npm test && npm run build",
    "test:watch": "jest --watch",
    "test": "jest",
    "ts": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "babel-plugin-jsx-remove-data-test-id": "^2.1.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18"
  }
}
